{
  "manifest_version": 3,
  "name": "Grok Imagine Favorites Manager",
  "version": "1.1",
  "description": "Download and manage favorited Grok Imagine media",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://grok.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://grok.com/imagine/*"
      ],
      "js": [
        "js/constants.js",
        "js/utils.js",
        "js/ui.js",
        "js/classifier.js",
        "js/api.js",
        "js/scanner.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}